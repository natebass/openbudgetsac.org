doctype html
html
  head
    meta(name='viewport', content='width=device-width')
    link(rel="stylesheet" href="/public/css/main.css")
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')
    block pageTitle
          title= title + " â€” Open Budget Sacramento"
    script(src='https://code.jquery.com/jquery-3.7.0.js')
    script(src="https://code.jquery.com/jquery-migrate-3.4.1.js").
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js").
    script(src="https://cdn.jsdelivr.net/npm/d3@7").
  block bodyClass
    // - define slug here
    - var slug = ""

  body(class= slug)
    #wrapper
      nav.main-nav
        .navbar.navbar-default.navbar-fixed-top
          .container
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/')
                img.img-responsive(src='/images/open_budget_sacramento_logo.png' alt="This logo for the Open Budget: Sacramento project uses Open Sacramento's black bridge logo.")
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right

                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    | About
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='/what-we-do') What and How
                    li
                      a(href='/who-we-are') Who We Are
                    li
                      a(href='/news') News
                    li
                      a(href='/contact') Contact Us

                li
                  a(href='/budget-visuals') Visualizations

                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    | Data
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='https://www.cityofsacramento.org/-/media/Corporate/Files/Finance/Budget/FY2022_23_ApprovedBudget_Revised_WEB.pdf?la=en target="_"') Sacramento Budget 2022/23
                    li
                      a(href='https://www.cityofsacramento.org/Finance/Budget') City of Sacramento Budget  
                    li
                      a(href='https://data.cityofsacramento.org/datasets/7b8b3680603c4894bd3faaa41c986c7c_0/explore') Recent Sacramento Budget Data

                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    | Resources
                    b.caret
                  ul.dropdown-menu
                    li
                      a(href='/oakland-budget-basics') Sacramento Budget Basics
                    li
                      a(href='/tools-projects') Tools and Projects
                  li
                    a(href='/feedback') Feedback

      block content
      
      #wrapper-footer

    footer#footer
      .container
        .row
          //-a(rel="license", href="http://creativecommons.org/licenses/by-nc-sa/4.0/")
            img(alt="Creative Commons License", style="border-width:0", src="https://i.creativecommons.org/l/by-nc-sa/4.0/88x31.png")
          .col-md-6.col-sm-9
            p
              | Open Budget: Sacramento is an open-source project by#{' '}
              a(href="https://codeforsacramento") Code for Sacramento
              |  that seeks to help residents understand Sacramento's spending
              |  and budget process better. This application is a clone of#{' '}
              a(href="https://openbudgetoakland.org/") Open Budget: Oakland
              | , from #{' '}
              a(href="https://openoakland.org/") OpenOakland.  

            ul.list-inline
              li
                a(href="https://openoakland.org")
                  img(src="/images/global/codeforsacramento-logo.png" width="150" alt="Code for Sacramento")
              li
                a(href="https://twitter.com/code4sac")
                  img(src="/images/global/twitter-icon.png" alt="twitter")
              li
                a(href="https://github.com/code4sac/openbudgetsac.org/")
                  img(src="/images/global/github-icon.png" alt="github")


          .col-sm-3.col-md-push-3
            ul.list-unstyled
              li
                //- a(href="/what-we-do") About the Project
                a(href="/who-we-are") About the Project
              li
                a(href="https://www.meetup.com/Code4Sac/") Get Involved
              li
                a(href="/feedback") Give Feedback

    link(href='https://fonts.googleapis.com/css?family=Arvo:400,700', rel='stylesheet', type='text/css')
